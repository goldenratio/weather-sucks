{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./src/types/*"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/legacy/**/*",
    "src/libs/**/*"
  ]
}
